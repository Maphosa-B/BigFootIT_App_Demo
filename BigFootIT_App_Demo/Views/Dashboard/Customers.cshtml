@model List<BigFootIT_App_Demo.Data.Entities.CustomerEntity>
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

 <div class="col-12">
    <div class="card">
        <div class="card-header">
            <!-- Button trigger modal -->
             <button type="button" class="btn btn-primary w-100" data-toggle="modal" data-target="#exampleModalpopover">Add Customer</button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-light table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Is Active</th>
                            <th>Customer Name</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var i in Model)
                        {
                            <tr>
                                <td>@i.IsActive</td>
                                <td>@i.CustomerName</td>
                                <td>@i.CustomerAddress</td>
                                 <td><a href="~/Dashboard/View_Single_Customer?customerId=@i.Id">More..</a></td>
                            </tr>
                        }
                                          
                    </tbody>                                    
                </table>
            </div>
        </div>
     </div>
</div>


<!--Modal to add customer-->
<div class="modal fade" id="exampleModalpopover">
     <form asp-action="Add_Customer" asp-controller="Dashboard">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Customer</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label><strong>Name</strong></label>
                        <input type="text" name="name" required class="form-control" value="">
                    </div>

                    <div class="form-group">
                        <label><strong>Address</strong></label>
                        <textarea  name="address" required class="form-control"></textarea>
                    </div>          
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
     </form>
</div>